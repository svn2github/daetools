#ifndef DAE_MATRIX_H
#define DAE_MATRIX_H

#include <stddef.h>

#ifndef real_t
#define real_t double
#endif

#define DAE_MATRIX real_t**

void setMatrixItem(DAE_MATRIX matrix, size_t row, size_t col, real_t value);

void setMatrixItem(DAE_MATRIX matrix, size_t row, size_t col, real_t value)
{
     matrix[col][row] = value;
}

#endif
